<div class="movie">
    <h2>Title: {{title}}</h2>
    <img src="{{imageUrl}}">
    <p>Available Tickets: {{tickets}}</p>
    <div class="btn-group">
        <button class="buttons"><a href="#/editMovie/{{_id}}">Edit</a></button>
        <button class="buttons"><a href="#/removeMovie/{{_id}}">Delete</a></button>
        <button class="buttons"><a href="#/buyMovieTicket/{{_id}}/myMovies">Buy Ticket</a></button>
        <button class="buttons"><a href="#/detailsMovie/{{_id}}">Details</a></button>
    </div>
</div>






